{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && $uid === auth.uid",
        ".write": "auth != null && $uid === auth.uid &&(!root.child('metadata').child(auth.uid).child('revokeTime').exists() || auth.token.auth_time > root.child('metadata').child(auth.uid).child('revokeTime').val())",
        "name": {
          ".validate": "newData.isString() && newData.val().length < 30"
        },
        "surname": {
          ".validate": "newData.isString() && newData.val().length < 30"
        },
        "birthday": {
          ".validate": "newData.isString() && newData.val().length === 10"
        },
        "$other": { ".validate": false }
      }
    },
    "$other": {
      ".read": false,
      ".write": false
    }
  }
}
